FROM thechangelog/legacy_assets AS legacy_assets
FROM thechangelog/runtime:2021-05-29T10.17.12Z

RUN mkdir /app
COPY . /app
WORKDIR /app

COPY --from=legacy_assets /var/www/wp-content /app/priv/wp-content

ENV MIX_ENV=prod
ENV TERM=xterm

# Used by PromEx for annotations
ARG APP_VERSION
ARG GIT_SHA
ARG GIT_AUTHOR
ENV APP_VERSION=${APP_VERSION}
ENV GIT_SHA=${GIT_SHA}
ENV GIT_AUTHOR=${GIT_AUTHOR}

EXPOSE 4000

CMD make on-app-start; mix do ecto.create, ecto.migrate, changelog.static.upload, phx.server
